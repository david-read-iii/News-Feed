<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        app:allowDividerBelow="true"
        app:defaultValue="@string/order_by_default_value"
        app:entries="@array/order_by_labels"
        app:entryValues="@array/order_by_values"
        app:icon="@drawable/ic_order_by_white"
        app:key="@string/order_by_key"
        app:title="@string/order_by_label" />

    <EditTextPreference
        app:allowDividerAbove="true"
        app:allowDividerBelow="true"
        app:defaultValue="@string/search_term_default_value"
        app:icon="@drawable/ic_search_term_white"
        app:key="@string/search_term_key"
        app:title="@string/search_term_label" />

    <!-- Empty element so bottom divider shows on last preference. -->
    <PreferenceCategory />

</androidx.preference.PreferenceScreen>